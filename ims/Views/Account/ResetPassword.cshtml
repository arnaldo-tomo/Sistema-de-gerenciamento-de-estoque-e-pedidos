@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Redefinir senha";
}

<div class="register-box">
    
    <div class="register-box-body">
        <div class="register-logo">
            <a href="/"><b>Munhava</b>Estoque</a>
        </div>
        <p class="login-box-msg">Registre uma nova associação</p>
        <form method="post">

            <input asp-for="Code" type="hidden" />

            <div class="form-group has-feedback">
                <label asp-for="Email">Informe o seu Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <label asp-for="Password">Informe a sua Senha</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Senha" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Redigite a senha" />
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block btn-flat">Redefinir</button>




        </form>


    </div>
    <!-- /.form-box -->
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
